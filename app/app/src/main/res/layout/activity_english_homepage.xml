<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="@drawable/backtest"
    tools:context="com.willowood.akshatrastogi.willowoodagri.EnglishHomepage">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/linearLayout4">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ln"
            android:contentDescription="@string/app_name"/>

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/linearLayout4">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="4">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:layout_weight="0.33">


            <Button
                android:id="@+id/abtuss"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="0.5"
                android:background="@drawable/ripple"
                android:drawableTop="@drawable/team"
                android:elegantTextHeight="false"
                android:text="@string/about_us"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <Button
                android:id="@+id/products"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.5"

                android:background="@drawable/ripple"
                android:drawableTop="@drawable/box"
                android:elegantTextHeight="false"
                android:text="@string/products"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="visible" />




        </LinearLayout><LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.33">

            <Button
                android:id="@+id/cropseng"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="0.5"
                android:background="@drawable/ripple"

                android:drawableTop="@drawable/crops"
                android:elegantTextHeight="false"
                android:text="@string/crops"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <Button
                android:id="@+id/safeuseenglish"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:layout_weight="0.5"
                android:background="@drawable/ripple"
                android:drawableTop="@drawable/warning"
                android:elegantTextHeight="false"
                android:text="@string/safety"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="visible" />



        </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.33">


                <Button
                    android:id="@+id/distributer"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/ripple"
                    android:drawableTop="@drawable/farmerface"
                    android:elegantTextHeight="false"
                    android:text="@string/registration"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/representative"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/ripple"
                    android:drawableTop="@drawable/man"
                    android:elegantTextHeight="false"
                    android:text="@string/ww_advisor"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="visible" />




            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.33">


                <Button
                    android:id="@+id/news"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/ripple"
                    android:drawableTop="@drawable/ic_newspaper"
                    android:elegantTextHeight="false"
                    android:text="@string/news"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/antidote"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/ripple"
                    android:drawableTop="@drawable/ic_chemistry"
                    android:elegantTextHeight="false"
                    android:text="@string/antidote"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="visible" />




            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.33">


                <Button
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/ripple"
                    android:drawableTop="@drawable/leaf"
                    android:elegantTextHeight="false"
                    android:text="IDENTIFY DISEASE"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </LinearLayout>
        </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#038C11"
            android:gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="0.33"
                android:background="@drawable/ripple2"
                android:drawableTop="@drawable/internet"
                android:onClick="website"
                android:text="@string/website"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="0.33"
                android:background="@drawable/ripple2"
                android:drawableTop="@drawable/temperature"
                android:onClick="openURLinBrowser"
                android:text="@string/weather"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <Button
                android:id="@+id/termsandconditionshomepage"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_gravity="bottom"
                android:layout_weight="0.33"
                android:background="@drawable/ripple2"
                android:drawableTop="@drawable/list"
                android:text="@string/t_amp_c"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <Button
                android:id="@+id/contactus"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_gravity="bottom"
                android:layout_weight="0.33"
                android:background="@drawable/ripple2"
                android:drawableTop="@drawable/mail"
                android:text="@string/contact"
                android:textColor="#ffffff"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
